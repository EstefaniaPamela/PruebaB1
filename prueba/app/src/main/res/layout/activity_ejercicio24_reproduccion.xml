<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio24Reproduccion">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="243dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnrep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="iniciar"
            android:text="Reproducir" />

        <Button
            android:id="@+id/btnpausar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="pausar"
            android:text="Pausar" />

        <Button
            android:id="@+id/btncontinuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="continuar"
            android:text="Continuar" />

        <Button
            android:id="@+id/btndetener"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="detener"
            android:text="Detener" />

        <Button
            android:id="@+id/btnrepcir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="circular"
            android:text="Reprodcir en Circulo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>